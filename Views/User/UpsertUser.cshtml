@model DairyWeb.Models.UsersModel

@{
    ViewBag.Title = "Add Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /*.btn-primary {
        background-color: #4CAF50;
        border-color: #4CAF50;
    }*/

    .form-control {
        border-color: #4CAF50;
    }
</style>
<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="card shadow-sm border-0 rounded-lg mt-5 rounded">
                    <div class="card-header"><h3 class="text-center font-weight-light my-1">User</h3></div>
                    <div class="card-body">
                        @using (Html.BeginForm("UpsertUser", "User", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="row">
                                @*<div class="col-6">
                                   
                                        @Html.LabelFor(model => model.RetailerId, htmlAttributes: new { @class = "small mb-1" })
                                        @Html.EditorFor(model => model.RetailerId, new { htmlAttributes = new { @class = "form-control py-1", placeholder = "Enter RetailerId" } })
                                        @Html.ValidationMessageFor(model => model.RetailerId, "", new { @class = "text-danger" })

                                    
                                </div>*@
                                <div class="col-6">
                                    <div class="">
                                        @Html.Label("User Name", htmlAttributes: new { @class = "small mb-1" })
                                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control py-1", placeholder = "Enter User Name" } })
                                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="">
                                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "small mb-1" })
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control py-1", placeholder = "Enter Name" } })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="">
                                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "small mb-1" })
                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control py-1", placeholder = "Enter RetailerId" } })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="">
                                        @Html.Label("Role", htmlAttributes: new { @class = "small mb-1" })
                                        @Html.DropDownListFor(model=>model.RoleId,(IEnumerable<SelectListItem>)ViewBag.RoleId,"--Select--",htmlAttributes: new { @class = "form-control py-1", placeholder = "Enter RetailerId" })
                                        @Html.ValidationMessageFor(model => model.RoleId, "", new { @class = "text-danger" })

                                    </div>
                                </div>
                            </div>
                                <div class=" d-flex align-items-center justify-content-center mt-4 mb-0">

                                    <input type="submit" value="Submit" class="btn btn-grad " />
                                    @Html.ActionLink("Back", "Users",null, new { @class = "btn btn-sm btn-defualt badge-pill" })
                                </div>

                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

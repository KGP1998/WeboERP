@model DairyWeb.Models.UpdateProfileModel

@{
    ViewBag.Title = "Update Profile";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card shadow">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-primary">Update Profile</h6>
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="row">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="col-12 col-md-4">
                            @Html.LabelFor(model => model.Name)
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                        </div>
                        <div class="col-12 col-md-4">
                            @Html.Label("PhNo 1")
                            @Html.EditorFor(model => model.PhNo1, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PhNo1, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-12 col-md-4">
                            @Html.Label("PhNo 2")
                            @Html.EditorFor(model => model.PhNo2, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PhNo2, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-12 col-md-4">
                            <div class="row">
                                <div class="col-12 col-md-12">
                                    @Html.Label("Pan No")
                                    @Html.EditorFor(model => model.PanNo, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.PanNo, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-12 col-md-12">
                                    @Html.Label("Adhar No")
                                    @Html.EditorFor(model => model.AdharNo, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.AdharNo, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                        <div class="col-12 col-md-8">
                            @Html.LabelFor(model => model.Address)
                            @Html.TextAreaFor(model => model.Address, new { @class = "form-control", rows = "4" })
                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                        </div>


                        <div class="col-12">
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-grad" />
                                <a href='@Url.Action("UserDetails")' class="btn  btn-secondary ">Back to Profile</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

</div>


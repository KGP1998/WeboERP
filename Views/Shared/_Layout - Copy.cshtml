<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/Content/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/css/toastr.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.23/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <style>
        @@media (max-width: 576px) {
            * {
                font-size: 11px;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar  navbar-expand-sm navbar-toggleable-sm navbar-dark success border-bottom box-shadow mb-3">
            <div class="container">

                @Html.ActionLink("DairyCRM", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1 ">
                        <li class="nav-item">
                            @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link text-white" })
                        </li>
                        @if (Convert.ToInt32(Session["RoleId"]) == 4)
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Routes", "Routes", "Route", new { area = "" }, new { @class = "nav-link text-white" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Products", "Products", "Product", new { area = "" }, new { @class = "nav-link text-white" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Customers", "Customers", "Customer", new { area = "" }, new { @class = "nav-link text-white" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Orders", "Orders", "Order", new { area = "" }, new { @class = "nav-link text-white" })
                            </li>
                        }
                        else if (Convert.ToInt32(Session["RoleId"]) == 3)
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Retailers", "Retailers", "Retailer", new { area = "" }, new { @class = "nav-link text-white" })
                            </li>

                        }
                        else if (Convert.ToInt32(Session["RoleId"]) == 2)
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Distributors", "Distributors", "Distributor", new { area = "" }, new { @class = "nav-link text-white" })
                            </li>
                        }else if (Convert.ToInt32(Session["RoleId"]) == 1)
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Admins", "Admins", "Admin", new { area = "" }, new { @class = "nav-link text-white" })
                            </li>
                        }

                        <li class="nav-item">

                            @using (Html.BeginForm("Logout", "Login", FormMethod.Post))
                            {

                                <input class="btn btn-sm btn-dark" type="submit" value="Logout">
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark text-white">
        <div class="container">
            &copy; 2021 - DairyCRM - <a>Privacy</a>
        </div>
    </footer>

    <script src="~/Content/jquery/dist/jquery.min.js"></script>
    <script src="~/Content/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/Content/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Content/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/js/toastr.js"></script>
    @*<script src="https://code.jquery.com/jquery-3.5.1.js"></script>*@
    <script src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
